{
    "name": "Download Catcher Extension",
    "version": "0.1",
    "description": "Catch downloads before they begin",
    "manifest_version": 2,
    "icons": {
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popout.html"
    },

    "permissions": [
        "<all_urls>",
        "downloads",
        "unlimitedStorage"
    ]
}